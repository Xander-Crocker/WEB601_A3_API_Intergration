<!DOCTYPE HTML>
<html>

	<head>
		<title> WEB601 Ecommerce | Login</title>
		<link href="/stylesheets/login_register.css" rel="stylesheet"/>
		<%- include('partials/head.ejs'); %>
	</head>

	<body>
        <%- include('partials/nav.ejs'); %>

            <!-- ANCHOR main content - Login form -->
			<main class="mb-4">
				<body class="my-login-page">
					<section class="h-100">
						<div class="container h-100">
							<div class="row justify-content-md-center h-100">
								<div class="card-wrapper">
									<div class="card fat">
										<div class="card-body">
											<h4 class="card-title">Login</h4>
											<form class="my-login-validation" novalidate="">
												<!-- Username Input -->
												<div class="form-group">
													<label for="username-input">Username</label>
													<input id="username-input" type="username" class="form-control" name="username" autocomplete="username"  required autofocus>
												</div>
												<!-- Password Input -->
												<div class="form-group">
													<label for="password-input">Password</label>
													<input id="password-input" type="password" class="form-control" name="password" autocomplete="password"  required data-eye>
												</div>
												<!-- Login Button -->
												<div class="form-group m-0">
													<button type='button' class="btn btn-primary btn-block" id="login-btn">Login</button>
												</div>
												<!-- Register Account Button -->
												<div class="mt-4 text-center">
													Don't have an account? <br> <a href="/signup.ejs">Create One</a>
												</div>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
					</section>
				</body>
			</main>	

		<%- include('partials/footer.ejs'); %>

		<script src="/login.js"></script>
	</body>

</html>